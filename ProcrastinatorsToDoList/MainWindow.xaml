<Window x:Class="ProcrastinatorsToDoList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProcrastinatorsToDoList"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="400">
    <Border Padding="10">

        <StackPanel>
            <!-- TItle -->
            <TextBlock Text="The Procrastinator's App" FontSize="22" FontWeight="Bold" TextAlignment="Center" />

            <!-- What's for today?-->
            <TextBlock Text="What is on your Agenda today?" Margin="0 15 0 0"/>
            <TextBox Padding="2" Margin="0 0 0 5" />

            <!-- Buttons-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Content="Add Another Task" Grid.Column="0" Margin="2 "/>
                <Button Content="Finish" Grid.Column="1" Margin="2" />
                <Button Content="Submit" Grid.Column="2" Margin="2" />
            </Grid>
            
        </StackPanel>

    </Border>
</Window>
